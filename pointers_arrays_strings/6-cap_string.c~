#include "main.h"

/**
 */

char *cap_string(char *c)
{
	int i, b;
	char seps[] = " \t\n,;.!?\"(){}";

	if (*c >= 'a' && *c <= 'z')
		*c -= 32;

	for (i = 1; *(c + i); i++)
	{
		if (*(c + i) >= 'a' && *(c + i) <= 'z')
		{
			for (b = 0; *(seps + b); b++)
			{
				if (*(c + i - 1) == *(seps + b))
				{
					*(c + i) -= 32;
					break;
				}
			}
		}
	}
	return (c);
}
